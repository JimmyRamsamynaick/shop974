# Configuration du serveur
PORT=3000
NODE_ENV=development

# Configuration MongoDB
MONGODB_URI=mongodb://localhost:27017/shop974
MONGODB_DB_NAME=shop974

# Configuration JWT
JWT_SECRET=shop974_secret_key_change_in_production_with_strong_random_string
JWT_EXPIRES_IN=7d

# Configuration CORS
FRONTEND_URL=http://localhost:3000

# Configuration Email (pour les notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=Shop974 <noreply@shop974.com>

# Configuration de l'upload de fichiers
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp

# Configuration des paiements (à configurer selon votre processeur de paiement)
PAYMENT_PROVIDER=stripe
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Configuration de l'expédition
SHIPPING_FREE_THRESHOLD=50
SHIPPING_COST=5.99
TAX_RATE=0.20

# Configuration des logs
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configuration de la sécurité
BCRYPT_ROUNDS=12
SESSION_SECRET=another_strong_random_string_for_sessions

# Configuration de l'API externe (si nécessaire)
EXTERNAL_API_KEY=your_external_api_key
EXTERNAL_API_URL=https://api.example.com